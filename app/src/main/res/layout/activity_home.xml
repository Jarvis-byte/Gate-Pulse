<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebkg2"
    tools:context=".HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/Welcome_User_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Welcome_User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Hi !"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/first_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Welcome_User_ll"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_edittext"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">


                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Please input date and time"
                    android:textColor="#7a7a7a"
                    android:textColorHint="#E3E5E8"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff" />


                <TextView
                    android:id="@+id/date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_gradient_heading"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Select Date"
                    android:textColor="#E3E5E8"
                    android:textColorHint="#E3E5E8"


                    android:textStyle="bold" />

                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/time_Picker_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_gradient_heading"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Time - From"
                    android:textColor="#E3E5E8"
                    android:textColorHint="#E3E5E8"
                    android:textStyle="bold" />


                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="270dp"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/time_Picker_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="300dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_gradient_heading"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Time - To"
                    android:textColor="#E3E5E8"
                    android:textColorHint="#E3E5E8"
                    android:textStyle="bold" />

                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="370dp"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/btn_done"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="400dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rounded_gradient_heading"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Submit"
                    android:textColor="#E3E5E8"
                    android:textColorHint="#E3E5E8"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/checkSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_card"
                android:layout_marginStart="12dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_gradient_heading_pink"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center"
                android:padding="10dp"
                android:text="Check Schedule"
                android:textColor="#353535"
                android:textColorHint="#E3E5E8"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

