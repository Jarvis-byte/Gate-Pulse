<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCVCOurseItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="#fff"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/impText" />

    <LinearLayout
        android:id="@+id/card_rv_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="2.3"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="10dp">

            <!--Textview for displaying our Course Name-->
            <TextView
                android:id="@+id/idTVempName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:drawableLeft="@drawable/drawble_left_name"
                android:drawablePadding="8dp"
                android:padding="2dp"
                android:text="Name"
                android:gravity="center_vertical"
                android:textColor="@color/impText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--Textview for displaying our Course Duration-->
            <TextView
                android:id="@+id/idTVemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/amethysta"
                android:drawableLeft="@drawable/email_1"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="Email ID:-"
                android:textColor="@color/normaltext" />

            <!--Textview for displaying our Course Description-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_gravity="bottom">

            <CheckBox
                android:id="@+id/Check_box_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Make Admin"
                android:textColor="@color/okButton"
                />

            <ImageView
                android:id="@+id/seenImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@drawable/admin_stamp"
                android:textColor="@color/okButton"
                android:textSize="15sp"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>