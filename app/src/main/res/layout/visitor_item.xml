<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCVCOurseItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="#fff"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">
    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/okButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">

        <!--Textview for displaying our Course Name-->
        <TextView
            android:id="@+id/idTVVisitorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:padding="2dp"
            android:text="Visitor's Name"
            android:textColor="@color/black"

            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVpurpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:padding="2dp"
            android:text="Purpose"
            android:textColor="@color/black" />

        <!--Textview for displaying our Course Duration-->
        <TextView
            android:id="@+id/idTVdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:padding="2dp"
            android:text="Data"
            android:textColor="@color/black" />

        <!--Textview for displaying our Course Description-->
        <TextView
            android:id="@+id/idTVCtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:padding="2dp"
            android:text="Time"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTVsubmittedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:padding="2dp"
            android:text="Submitted By"
            android:textColor="@color/black"

            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>